<div class="container p4">
    <div class='row'>
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body mx-auto">
                    <form action="/proyectos/monto" method="POST">
                        <div class="input-group mb-3 mx-auto" style="display: none;">
                            <input id="listProId" name="proyecto_id" class="m-2" value={{proyecto_id}}>
                                {{proyecto_id}}
                            </input>
                        </div>
                        <div>
                            <h3 class="m-4">
                                Proyecto {{nombre}}
                            </h3>
                        </div>
                        <div>
                            <p>
                                Descripcion: {{descripcion}}
                            </p>
                        </div>
                        <div>
                            <p>
                                Recaudacion: {{recaudacion}}
                            </p>
                        </div>
                    </form>

                    <form action="/proyectos/view/montos/add" method="POST">
                        <div class="input-group mb-3 mx-auto" style="display: none;">
                            <input id="listProId1" name="proyecto_id" class="m-2" value={{proyecto_id}}>
                                {{proyecto_id}}
                            </input>
                        </div>                        
                        <div class="m-3 mx-auto">
                            <button class="btn btn-outline-warning btn-block">
                                Crear Monto
                            </button>                            
                        </div>
                    </form>

                    <form action="/proyectos/view/montos" method="POST">
                        <div class="input-group mb-3 mx-auto" style="display: none;">
                            <input id="listProId2" name="proyecto_id" class="m-2" value={{proyecto_id}}>
                                {{proyecto_id}}
                            </input>
                        </div>
                        <div class="m-3 mx-auto">
                            <button class="btn btn-outline-warning btn-block">
                                Mis Montos
                            </button>  
                        </div>
                    </form> 

                    <form action="/proyectos/view/recaudacion" method="POST">
                        <div class="input-group m-3 mx-auto" style="display: none;">
                            <input id="listProId3" name="proyecto_id" class="m-2" value={{proyecto_id}}>
                                {{proyecto_id}}
                            </input>
                        </div>
                        <div class="m-3 mx-auto">
                            <button class="btn btn-outline-warning btn-block">
                                Mi Recaudacion
                            </button>                            
                        </div>
                    </form> 

                    <form action="/proyectos/delete" method="POST">
                        <div class="input-group m-3 mx-auto" style="display: none;">
                            <input id="listProId4" name="proyecto_id" class="m-2" value={{proyecto_id}}>
                                {{proyecto_id}}
                            </input>
                        </div>
                        <div class="m-3 mx-auto">
                            <button class="btn btn-outline-danger btn-block">
                                Eliminar
                            </button>                            
                        </div>
                    </form>   
                                
                </div>
            </div>
        </div>
    </div>
</div>